#!env zsh
nix_develop_command() {
    which nix &> /dev/null &&
        test ! -f flake.nix &&
        return

    git ls-files | grep '^flake.nix$' &> /dev/null &&
        echo "nix develop -i --command" ||
        echo "nix develop path:. -i --command"
}
log_prefix_ignore="$(nix_develop_command) "\
    just --justfile ~/.justfile run $(nix_develop_command) "$@"
