{
  "title": "Fine volume control (rev 2)",
  "rules": [
    {
      "description": "(Hojin) Map volume controls to fine volume controls (Option + Shift + Volume)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "volume_decrement"
          },
          "to": [
            {
              "key_code": "volume_decrement",
              "modifiers": [
                "left_shift",
                "left_option"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f11",
            "modifiers": {
              "mandatory": [
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "volume_decrement",
              "modifiers": [
                "left_shift",
                "left_option"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "volume_increment"
          },
          "to": [
            {
              "key_code": "volume_increment",
              "modifiers": [
                "left_shift",
                "left_option"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f12",
            "modifiers": {
              "mandatory": [
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "volume_increment",
              "modifiers": [
                "left_shift",
                "left_option"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Map fn + volume controls to fine volume controls (Option + Shift + Volume)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f11",
            "modifiers": {
              "mandatory": [
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "volume_decrement",
              "modifiers": [
                "left_shift",
                "left_option"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f12",
            "modifiers": {
              "mandatory": [
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "volume_increment",
              "modifiers": [
                "left_shift",
                "left_option"
              ]
            }
          ]
        }
      ]
    }
  ]
}
